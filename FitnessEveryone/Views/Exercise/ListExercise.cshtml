@using FitnessEveryone.ViewModels;
@model IndexExerciseViewModel

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">List of Exercises</h1>
        <h3>
            <small>Location - @Model.Exercise.LocationCategory</small>
        </h3>
        <h3>
            <small>Body Part - @Model.Exercise.BodyPartCategory</small>
        </h3>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach(var item in Model.Exercises)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" alt="Sample Photo" style="border: 1px solid" />
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Exercise" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                        <a asp-controller="Exercise" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                        </div>
                    </div>
                </div>  
            }
        </div>
    </div>
</div>

