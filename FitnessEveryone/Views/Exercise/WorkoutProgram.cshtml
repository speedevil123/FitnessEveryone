@using FitnessEveryone.ViewModels;
@model IndexExerciseViewModel

<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
    <div class="list-group">
    @foreach (var item in Model.Exercises)
    {
        <a asp-controller="Exercise" asp-action="Detail" asp-route-id="@item.Id" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <img src="@item.Image" alt="twbs" width="75" height="75" class="rounded-circle flex-shrink-0">
            <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                    <h6 class="mb-0" style="font-size: 20px; margin-right: 20px">@item.Title</h6>
                        <p class="mb-0 opacity-75" style="font-size: 18px">Sets - @item.QuantitySets</p>
                        <p class="mb-0 opacity-75" style="font-size: 18px">Reps - @item.QuantityReps</p>
                </div>
                <small class="opacity-50 text-nowrap">@item.BodyPartCategory</small>
            </div>
        </a>
    }
    </div>
</div>
