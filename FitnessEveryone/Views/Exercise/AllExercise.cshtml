@using FitnessEveryone.ViewModels;
@model IEnumerable<Exercise> 

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading mt-3 mb-3">List of Exercises</h1>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" alt="Sample Photo" style="border: 1px solid" />
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Exercise" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="Exercise" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                </div>
                                <small class="text-muted">break 3 min</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



